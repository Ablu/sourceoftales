<?xml version="1.0"?>
<sprite action="stand" name="test">
    <imageset
        name="walkcycle"
        src="sprites/monsters/snake.png"
        width="32"
        height="32" />
    <action
        name="stand"
        imageset="walkcycle">
        <animation direction="up">
            <frame index="0" />
        </animation>
        <animation direction="left">
            <frame index="3" />
        </animation>
        <animation direction="down">
            <frame index="6" />
        </animation>
        <animation direction="right">
            <frame index="9" />
        </animation>
    </action>
    <action
        name="walk"
        imageset="walkcycle">
        <animation direction="up">
            <sequence start="0" end="2" delay="75" />
        </animation>
        <animation direction="left">
            <sequence start="3" end="5" delay="75" />
        </animation>
        <animation direction="down">
            <sequence start="6" end="8" delay="75" />
        </animation>
        <animation direction="right">
            <sequence start="9" end="11" delay="75" />
        </animation>
    </action>
</sprite>
